<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_tp_emploi_tree" model="ir.ui.view">
        <field name="name">tp.emploi.tree</field>
        <field name="model">tp.emploi</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="professeur"/>
                <field name="date"/>
                <field name="heure_debut" widget="float_time"/>
                <field name="salle"/>
                <field name="statut"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tp_emploi_form" model="ir.ui.view">
        <field name="name">tp.emploi.form</field>
        <field name="model">tp.emploi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="professeur"/>
                            <field name="salle"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="heure_debut" widget="float_time"/>
                            <field name="statut"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tp_emploi" model="ir.actions.act_window">
        <field name="name">Gestion des Séances</field>
        <field name="res_model">tp.emploi</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_tp_emploi_root" name="Emplois du Temps" sequence="10"/>
    <menuitem id="menu_tp_emploi_seance" name="Gestion des Séances" parent="menu_tp_emploi_root" action="action_tp_emploi"/>

</odoo>
